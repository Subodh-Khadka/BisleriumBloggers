@model Domain.Bislerium.Blog
@{
    ViewData["Title"] = "Blog Details";
}

<h2 class="mb-3 text-center">Blog Details</h2>
<hr />
<div class="container">
    <div class="blog-header justify-content-center align-items-center p-3">
        <h1>@Model.Title</h1>
        <img src="@Model.Image" alt="@Model.Id" style="max-width: 10%; max-height:10%" class="rounded-circle" />
        <div class="btn btn-group gap-2">
            <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("UpVote", "Blog", new { id = @Model.Id })'">@Model.UpVote <i class="bi bi-hand-thumbs-up"></i></button>
            <button class="btn btn-sm btn-warning" onclick="location.href = '@Url.Action("DownVote", "Blog", new { id = @Model.Id })'">@Model.DownVote <i class="bi bi-hand-thumbs-down"></i></button>
        </div>
        <p class="mt-3">@Model.Description</p>
    </div>

    <div>
        <h3 class="mt-4">Comments</h3>
        @if (Model.Comments != null && Model.Comments.Any())
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <p class="card-text">@comment.Content</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group gap-2">
                                <button class="btn btn-sm btn-primary" onclick="location.href = '@Url.Action("UpVoteComment", "Blog", new { id = @Model.Id, commentId = @comment.Id })'"><i class="bi bi-hand-thumbs-up"></i></button>
                                <button class="btn btn-sm btn-warning" onclick="location.href = '@Url.Action("DownVoteComment", "Blog", new { id = @Model.Id, commentId = @comment.Id })'"><i class="bi bi-hand-thumbs-down"></i></button>
                            </div>
                            <small class="text-muted">Upvotes: @comment.UpVote | Downvotes: @comment.DownVote</small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No comments yet.</p>
        }
    </div>

    <h3>Add Comment</h3>
    <form method="post" action="@Url.Action("AddComment", "Blog")">
        <div class="">
            <textarea name="Content" class="form-control" placeholder="Enter your comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-1 mb-1">Add Comment</button>
    </form>
</div>
