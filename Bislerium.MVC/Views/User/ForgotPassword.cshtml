@model Domain.Bislerium.ViewModels.ForgotPasswordVm

<div class="container-fluid center-container">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h2>Forgot Your Password?</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="ForgotPassword" asp-controller="User" method="post">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="Enter your email" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6 offset-md-3 text-center">
                <p>Remember your password? <a asp-controller="Account" asp-action="Login">Login</a></p>
            </div>
        </div>
    </div>
</div>
