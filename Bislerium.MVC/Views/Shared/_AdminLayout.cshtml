@using System.Security.Claims

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - E-Learning Platform</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @RenderSection("styles", required: false)

    <style>
        body {
            /* font-size: small; */
            background-color: #f7f7f7;
        }

        * {
            padding: 0;
            margin: 0px 0 0 0px;
            font-family: "Poppins", sans-serif;
        }

        .sidebar {
            border-right: 1px solid gray;
            position: fixed;
            top: 0;
            left: -5px;
            height: 100%;
            width: 200px;
            background-color: #393e46;
            padding-top: 66px;
            overflow-y: auto;
            transition: width 0.3s ease;
        }

        .main-content {
            font-size: small;
            margin-left: 200px;
            padding-top: 70px;
        }

        .header {
            position: fixed;
            top: 0;
            left: -5px;
            right: -10px;
            width: 100%;
            height: 50px;
            background-color: #343a40;
            color: white;
            z-index: 10;
        }

            .header a {
                font-size: smaller;
            }

        .nav-link {
            margin: 2px 5px;
            border-radius: 10px;
            color: white;
        }

        .li a {
            padding: 10px 10px;
        }

        .nav-item {
            border-radius: 10px;
        }

        .icon {
            font-size: 20px;
            padding: 0 7px;
        }

        .sidebar-hidden {
            width: 0;
        }

        .show-full {
            margin-left: 0;
            width: 100%;
        }
    </style>

</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg d-flex justify-content-center align-items-center">
            <i class="bi bi-cup-hot-fill"></i>
            <a class="navbar-brand fs-6 ps-3 text-white text-center">Bislerium</a>
        </nav>
    </header>

    <div class="sidebar" id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <h6 class="text-info ms-4"><i class="bi bi-list-nested"></i>Navbar</h6>
                <hr class="text-white" />
            </li>
            <li class="nav-item">
                <a asp-action="Index" asp-controller="Admin" class="nav-link mt-1 mb-1">Dashboard</a>
            </li>
            <li class="nav-item">
                <a asp-action="Index2" asp-controller="Admin" class="nav-link mt-1 mb-1">Popular Blog</a>
            </li>
            <li class="nav-item">
                <a asp-action="Index1" asp-controller="Admin" class="nav-link mt-1 mb-1">Popular Blogger</a>
            </li>
          
            @if (User.Identity.IsAuthenticated & User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link mt-1 mb-1" asp-area="" asp-controller="Admin" asp-action="Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="UserProfile">MyProfile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mt-1 mb-1" asp-area="" asp-controller="Admin" asp-action="Logout">Logout</a>
                </li>
            }
            }
        </ul>
    </div>

    <div class="main-content mb-2">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
