@model Domain.Bislerium.Comment

<h2>Edit Comment</h2>

<form method="post" asp-action="Edit" asp-controller="Comment">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="blogId" value="@Model.BlogId"/>
    <div class="form-group">
        <label asp-for="Content">Content:</label>
        <textarea class="form-control" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
