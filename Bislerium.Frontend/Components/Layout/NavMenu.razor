@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Bislerium.Frontend</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @{
            var authStateTask = AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authStateTask.Result.User;
        }

        @if (user.IsInRole("Blogger"))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="allBlog">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> allBlog
                </NavLink>
            </div>
        }
     <AuthorizeView>
         <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="allBlog">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> allBlog
                    </NavLink>
                </div>
         </Authorized>
     </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="blogs">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Blogs
            </NavLink>
        </div> 
      
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="addBlog">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add Blog
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>
    </nav>
</div>

